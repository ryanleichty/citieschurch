  {.section item}
  <article class="quarterly-item" id="article-{id}" data-item-id="{id}">

      <div class="q-inner">

        <div class="back-to-all-vol grid-100">
          <a href="{collection.fullUrl}">‚Üê Back to all Volumes</a>
        </div>

        <div class="q-content gridBlock-25">
          <h1>{title}</h1>
          {.section customContent}
            {.if description}
              <p>{description}</p>
            {.end}
          {.end}
        </div>

        <div class="q-thumb gridBlock-50">
          {.main-image?}
            <img {@|image-meta} />
          {.end}
          <div class="quarterly-pagination">
            <p>Volume {customContent.volumeNumber}</p>
            <ul>
              <squarespace:query collection="the-quarterly-overview" limit="100">
                {.repeated section items}
                  <li>
                    <a href="{fullUrl}"><span>{customContent.volumeNumber}</span></a>
                  </li>
                {.end}
              </squarespace:query>
            </ol>
          </div>
        </div>

        <div class="q-volume gridBlock-25">
            <div class="v-container">
              {.if customContent.volumeNumber}
                <p class="v-title">Volume {customContent.volumeNumber}</p>
              {.end}
              <p class="v-title">{title}</p>
              {.if customContent.price}
                <div class="vol-meta">
                  <p class="vol-price">${customContent.price}</p>
                  <p class="vol-usa">
                    <span>
                      <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                      	 viewBox="0 0 22.5 15" style="enable-background:new 0 0 22.5 15;" xml:space="preserve">
                      <style type="text/css">
                      	.st0{fill:#FFFFFF;}
                      </style>
                      <g>
                      	<rect x="11.2" class="st0" width="11.2" height="1.7"/>
                      	<rect x="11.2" y="3.3" class="st0" width="11.2" height="1.7"/>
                      	<rect x="11.2" y="6.7" class="st0" width="11.2" height="1.7"/>
                      	<rect y="10" class="st0" width="22.5" height="1.7"/>
                      	<rect y="13.3" class="st0" width="22.5" height="1.7"/>
                      </g>
                      </svg>
                    </span>Printed in the USA</p>
                </div>
              {.end}
            </div>
            <div class="v-buy-download">
              {.if customContent.amazonURL}
                <a href="{customContent.amazonURL}" target="_blank" class="v-buy">Buy</a>
              {.end}
              {.if customContent.pdfURL}
                <a href="{customContent.pdfURL}" target="_blank" class="v-download">Download</a>
              {.end}
            </div>
        </div>

      </div>

  </article>
  {.end}
