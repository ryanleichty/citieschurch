  {.section item}
  <article class="quarterly-item {@|item-classes}{.main-image?} has-main-image{.end} clear" id="article-{id}" data-item-id="{id}">

    {.main-image?}
    <div class="quarterly-thumb">
      <img {@|image-meta} />
    </div>
    {.end}

    <div class="quarterly-content">
      <header class="entry-header">

        <div class="meta-above-title">
          {.if customContent.volumeNumber}
            <div class="entry-byline">
              <span class="entry-author">Volume {customContent.volumeNumber}</span>
            </div>
          {.end}
        </div>

        <h1 data-content-field="title" class="quarterly-title">{title}</h1>

      </header>

      <hr>
      <div class="buttons-block">
        <div class="buttons-inline">
          <a href="{customContent.amazonURL}" class="quarterly-button">Purchase</a>
          <div>
            or</br>
            <a href="{customContent.pdfURL}">Download Free PDF</a>
          </div>
        </div>
      </div>

      <div class="entry-content e-content">
        {.section body}
          {@}
        {.end}
      </div>

      <footer class="entry-footer clear">
        {.section sourceUrl}
        <p class="entry-source">
          Source: <a href="{sourceUrl}" target="_blank">{sourceUrl}</a>
        </p>
        {.end}
        {.section tags}
        <p class="entry-tags">
          Tagged: {.repeated section @}<a href="{collection.fullUrl}?tag={@|url-encode}" rel="tag">{@}</a>{.alternates with}, {.end}
        </p>
        {.end}
        <div class="entry-actions">
          {@|like-button}{@|social-button-inline}
        </div>
      </footer>
    </div>

  </article>

  {.end}
